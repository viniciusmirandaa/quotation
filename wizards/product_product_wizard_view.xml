<odoo>

    <record id="product_product_wizard_action" model="ir.actions.act_window">
        <field name="name">Product Information</field>
        <field name="res_model">product.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <record id='product_product_wizard_form' model='ir.ui.view'>
        <field name="name">Product Info Form</field>
        <field name="model">
            C:\Users\superglass-ti\Desktop\odoo-14\custom\quotation\wizards\product_product_wizard_view.xml
        </field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="customer_selection" widget="radio"/>
                    </group>
                    <group name="customer_selection_scenario"
                           attrs="{'invisible': [('customer_selection', '=', 'route')]}">
                        <group>
                            <field name="partner_id"
                                   attrs="{'invisible': [('customer_selection', '=', False)]}"
                                   options="{'no_create': True, 'no_edit': True}"/>
                            <field name="route_id"
                                   attrs="{'invisible': [('partner_id', '=', False)]}"
                                   options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </group>
                    <group name="route_selection_scenario"
                           attrs="{'invisible': [('customer_selection', '=', 'customer')]}">
                        <group>
                            <field name="route_id"
                                   attrs="{'invisible': [('customer_selection', '=', False)]}"
                                   options="{'no_create': True, 'no_edit': True}"/>
                            <field name="partner_id"
                                   attrs="{'invisible': [('route_id', '=', False)]}"
                                   options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="quotation" string="Quotation">
                            <form>
                                <field name="quotation_product_line_ids"
                                       colspan="2"
                                       nolabel="1">
                                    <tree>
                                        <field name="attribute_id"/>
                                        <field name="alternative_product_product_ids"/>
                                        <field name="accessories_product_product_ids"/>
                                    </tree>
                                </field>
                            </form>
                        </page>
                    </notebook>
                    <footer>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>